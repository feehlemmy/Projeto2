<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pinguimsoftware.gabrielsilva.eduqapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ReportCardActivity"></activity>
        <activity android:name=".ResetPasswordActivity" />
        <activity
            android:name=".CalendarActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.TelaCheia" />
        <activity
            android:name=".CompleteSignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.TelaCheia" />
        <activity
            android:name=".SignUpWithEmailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.TelaCheia" />
        <activity
            android:name=".SignUp"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.TelaCheia" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.TelaCheia" />
        <activity
            android:name=".LoginEmailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.TelaCheia" />
        <activity
            android:name=".LoginPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.TelaCheia" />
        <activity
            android:name=".ProfileEditActivity"
            android:label="@string/label_edit_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ListAlunoActivity"
            android:label="@string/lbl_list_alunos"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ListAvisoActivity"
            android:label="@string/lbl_list_avisos"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ListEventosActivity"
            android:label="@string/lbl_list_eventos"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
    </application>

</manifest>